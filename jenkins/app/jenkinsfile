pipeline {
    agent {label 'windows'}

    parameters {
        choice(choices: ['22.03', '20.03', '22.09'], name: 'release')
    }

    environment {
        release_version = '0'
    }

    stages {
        stage('prepare') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'lichaoran-gitee', url: 'https://gitee.com/mywaaagh_admin/wsl']]])
                bat 'pip install -r requirements.txt'
                echo "${release} ${env.release_version}"
                script {
                    stdout = bat returnStdout: true, script: 'python get_sp_version.py %release%'
                    println("stdout ####" + stdout + "###########")

                    nstdout = bat(returnStdout: true, script: '@python get_sp_version.py %release%').trim()
                    println("stdout ####" + nstdout + "###########")

                    ntstdout = bat(returnStdout: true, script: 'python get_sp_version.py %release%').trim()
                    println("stdout ####" + ntstdout + "###########")
                }
                echo "${stdout} ${nstdout} ${ntstdout} ${release_version} ${env.release_version} ${BUILD_NUMBER}"
            }
        }
    }
}
